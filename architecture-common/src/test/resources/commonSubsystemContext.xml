	<bean id="adminService" class="architecture.ee.component.core.lifecycle.AdminServiceImpl" init-method="initialize" depends-on="eventPublisher, contextLoader, configService" p:eventPublisher-ref="eventPublisher" p:contextLoader-ref="contextLoader" p:configService-ref="configService"  />
