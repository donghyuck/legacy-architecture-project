<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="framework-user-actions" namespace="/accounts"  extends="framework-default" >	
		<default-interceptor-ref name="defaultStack" />		
		<action name="login" class="architecture.ee.web.struts2.action.common.LoginAction">
			<result name="input" >/login.jsp</result>
		</action>		
		<action name="view-profile" class="architecture.ee.web.struts2.action.common.ViewProfileAction">
			<result name="success" type="freemarker">/html/view-profile.ftl</result>
		</action>						
	</package>

</struts>