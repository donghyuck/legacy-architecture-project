<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="framework-user-actions" namespace="/accounts"  extends="framework-default" >	
		
		<default-interceptor-ref name="defaultStack" />		
		
		<action name="login" class="architecture.security.web.struts2.action.LoginAction">
			<result name="input" >/login.jsp</result>
		</action>		
		
		<action name="view-profile" class="architecture.security.web.struts2.action.ViewUserProfileAction">
			<result name="success" type="freemarker">/html/view-profile.ftl</result>
		</action>						
	
	</package>

	<package name="framework-user-admin-actions" namespace="/accounts/admin"  extends="framework-default" >	
		
		<default-interceptor-ref name="defaultStack" />		
		
		<action name="main-user" class="architecture.security.web.struts2.action.admin.MainUserAction">
			<result name="success" type="freemarker">/html/manage-users.ftl</result>
		</action>
				
		<action name="manage-user" class="architecture.security.web.struts2.action.admin.UserManagementAction">
			<result name="success" type="freemarker">/html/manage-users.ftl</result>
			<result name="json-success" type="json">
			    <param name="enableGZIP">true</param>
			    <param name="excludeProperties">users.properties</param>
			    <param name="excludeNullProperties">true</param> 
				<param name="includeProperties">
				users.*, totalUserCount
				</param>
			</result>
		</action>
		
		<action name="user-property" class="architecture.security.web.struts2.action.admin.UserPropetyAction">
		    <result name="success" type="freemarker">/html/manage-users.ftl</result>
			<result name="json-success" type="json">
			    <param name="enableGZIP">true</param>
			    <param name="excludeNullProperties">true</param> 
				<param name="includeProperties">
				targetUserProperty.*
				</param>
			</result>		
		</action>			

		<action name="update-user-property" method="update" class="architecture.security.web.struts2.action.admin.UserPropetyAction">
		    <result name="success" type="freemarker">/html/manage-users.ftl</result>
			<result name="json-success" type="json">
			    <param name="enableGZIP">true</param>
			    <param name="excludeNullProperties">true</param> 
				<param name="includeProperties">
				targetUserProperty.*
				</param>
			</result>		
		</action>	

		<action name="delete-property" method="delete" class="architecture.security.web.struts2.action.admin.UserPropetyAction">
		    <result name="success" type="freemarker">/html/manage-users.ftl</result>
			<result name="json-success" type="json">
			    <param name="enableGZIP">true</param>
			    <param name="excludeNullProperties">true</param> 
				<param name="includeProperties">
				targetUserProperty.*
				</param>
			</result>		
		</action>						
	</package>
	
</struts>